<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="16dp"
    tools:context="TapView.java">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/tapImage"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"
            android:background="#E0E0E0"
            tools:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/tapTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tap:"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/tapDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tap Descriptions:"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="20dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:layout_marginBottom="16dp">



            <TextView
                android:id="@+id/tapContainerType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Container Type:"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tapMaterial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Material:"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tapSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Size:"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tapFlow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Flow Rate:"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tapLiquidType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Liquid Type:"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Email" />



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:weightSum="2">


            <Button
                android:id="@+id/btnBackToList"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Back to List"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnBackToHome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Home"
                android:layout_marginStart="8dp" />
        </LinearLayout>



    </LinearLayout>
</ScrollView>